<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/text_visor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="textEnd"
        android:padding="16dp"
        android:textSize="40sp"
        android:text="0"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_C"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:text="C" />

        <Button
            android:id="@+id/button_deleteLast"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:text="CE" />

        <Button
            android:id="@+id/button_percentagem"
            android:layout_width="119dp"
            android:layout_height="80dp"
            android:text="%" />

        <Button
            android:id="@+id/button_dividir"
            android:layout_width="99dp"
            android:layout_height="80dp"
            android:text="/" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_7"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:text="7"
            />

        <Button
            android:id="@+id/button_8"
            android:layout_width="101dp"
            android:layout_height="80dp"
            android:text="8" />

        <Button
            android:id="@+id/button_9"
            android:layout_width="119dp"
            android:layout_height="80dp"
            android:text="9" />

        <Button
            android:id="@+id/button_multiplicar"
            android:layout_width="99dp"
            android:layout_height="80dp"
            android:text="*" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_4"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:text="4"
            />

        <Button
            android:id="@+id/button_5"
            android:layout_width="101dp"
            android:layout_height="80dp"
            android:text="5" />

        <Button
            android:id="@+id/button_6"
            android:layout_width="119dp"
            android:layout_height="80dp"
            android:text="6" />

        <Button
            android:id="@+id/button_subtrair"
            android:layout_width="99dp"
            android:layout_height="80dp"
            android:text="-" />



    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_1"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:text="1"
            />

        <Button
            android:id="@+id/button_2"
            android:layout_width="101dp"
            android:layout_height="80dp"
            android:text="2" />

        <Button
            android:id="@+id/button_3"
            android:layout_width="119dp"
            android:layout_height="80dp"
            android:text="3" />

        <Button
            android:id="@+id/button_addition"
            android:layout_width="99dp"
            android:layout_height="80dp"
            android:text="+" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_0"
            android:layout_width="190dp"
            android:layout_height="80dp"
            android:text="0" />

        <Button
            android:id="@+id/button_ponto"
            android:layout_width="101dp"
            android:layout_height="80dp"
            android:text="." />

        <Button
            android:id="@+id/button_equals"
            android:layout_width="119dp"
            android:layout_height="80dp"
            android:text="=" />





    </LinearLayout>

</LinearLayout>
